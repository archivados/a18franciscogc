<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTIONS -->
    <act_window id="incidenceaction_action"
        name="Actions"
        res_model="product.template"
        view_mode="kanban,tree,form,activity"
        domain="[('type', '=', 'sat')]"
        context="{'search_default_filter_to_sell':1}"
        limit="80"/>

    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_action_view_tree" model="ir.ui.view">
        <field name="name">Incidence Actions List</field>
        <field name="model">xestionsat.incidence.action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="executed_by"/>
                <field name="template_id"/>
                <field name="observation"/>
                <field name="list_price"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- MENÃšS -->
    <menuitem 
        name="TAS Actions (products)" 
        id="xestionsat_actions_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="100" 
        action="incidenceaction_action"/>
</odoo>
