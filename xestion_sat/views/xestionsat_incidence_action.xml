<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='xestionsat_incidence_action_action' model='ir.actions.act_window'>
        <field name="name">Incidence Actions</field>
        <field name="res_model">xestionsat.incidence.action</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_action_view_tree" model="ir.ui.view">
        <field name="name">Incidence Actions List</field>
        <field name="model">xestionsat.incidence.action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="executed_by"/>
                <field name="template_id"/>
                <field name="observation"/>
                <field name="list_price"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>
    
</odoo>
