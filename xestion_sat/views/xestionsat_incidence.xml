<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="xestionsat_incidence_view_form" model="ir.ui.view">
        <field name="view_type">form</field>
        <field name="name">xestionsat.incidence.form</field>
        <field name="model">xestionsat.incidence</field>
        <field name="arch" type="xml">
            <form name="primary_form">
                <!--
                <header>
                    <field name="state" widget="statusbar" 
                        options="{'clickable': '1', 'fold_field': 'fold'}"
                        domain="[('id', '=', state)]"/>
                </header>
                -->
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="title"/>
                            <field name="failure_description"/>
                            <field name="observation"/>
                            <field name="created_by_id"
                                domain="[('id', '=', uid)]"
                                options="{'no_create_edit': True}" />
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state"/>
                            <field name="assistance_place"/>
                        </group>
                    </group>
                    <group>
                        <field name="device_ids"
                            domain="[('owner_id', '=', customer_id)]">
                            <tree>
                                <field name="created_by_id"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="headquarter_id"/>
                                <field name="location"/>
                            </tree>
                        </field>
                    </group>

                    <label for="incidence_action_ids" string="Actions" />
                    <field name="incidence_action_ids"/>
                    <div class="o_form_buttons_view" role="toolbar">
                        <button name="add_action" string="Add Action" type="object" class="oe_read_only btn_xest_primary"/>
                        <button name="create_order" string="Create Order" type="object" class="oe_read_only btn_xest_secondary"/>
                        <button name="create_order_modify" string="Create Order and modify" type="object" class="oe_read_only btn_xest_secondary"/>
                        
                        <!-- This button is made visible through Python in the <fields_view_get> method definition -->
                        <button name="btn_close" special="cancel" string="Close" class="pull-left btn-primary oe_read_only" invisible="True"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_view_tree" model="ir.ui.view">
        <field name="view_type">tree</field>
        <field name="name">xestionsat.incidence.tree</field>
        <field name="model">xestionsat.incidence</field>
        <field name="arch" type="xml">
            <tree name="primary_tree" string="Incidences"
                    decoration-danger="state_value == 'Pendente'"
                    decoration-warning="state_value not in ('Pendente', 'Finalizada', 'Iniciada', 'Cancelada')"
                    decoration-success="state_value == 'Finalizada'">

                <field name="state"/>
                <field name="state_value"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="customer_id"/>
                <field name="title"/>
                <field name="failure_description"/>
                <field name="assistance_place"/>
                <field name="created_by_id"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <act_window id="xestionsat_incidence_action"
        name="Incidences"
        res_model="xestionsat.incidence"
        view_mode="tree,form"
        limit="80"/>

    <!-- MENÃšS -->
    <menuitem 
        name="Incidences" 
        id="xestionsat_incidence_sub_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="10" 
        action="xestionsat_incidence_action"/>
</odoo>
