<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTIONS -->
    <act_window id="xestionsat_incidence_action"
        name="Incidences"
        res_model="xestionsat.incidence"
        view_type="form"
        view_mode="tree,form"
        context="{'search_default_customer':1}"
        limit="80"/>

    <!-- Form View -->
    <record id="xestionsat_incidence_view_form" model="ir.ui.view">
        <field name="name">Incidence</field>
        <field name="model">xestionsat.incidence</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <group>
                        <field name="lock" attrs="{'invisible': True}"/>
                        <field name="customer_id" attrs="{'readonly': [('lock', '=', True)]}"/>
                        <field name="title"/>
                        <field name="failure_description"/>
                        <field name="observation"/>
                        <field name="created_by_id"
                            domain="[('id', '=', uid)]"
                            options="{'no_create_edit': True}" />
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state"/>
                        <field name="assistance_place"/>
                    </group>
                </group>
                <group>
                    <field name="device_ids"
                        domain="[('owner_id', '=', customer_id)]">
                        <tree>
                            <field name="created_by_id"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="headquarter_id"/>
                            <field name="location"/>
                        </tree>
                    </field>
                </group>

                <label for="incidence_action_ids" string="Actions" />
                <field name="incidence_action_ids">
                    <form>
                        <group>
                            <group>
                                <field name="executed_by"
                                    domain="[('id', '=', uid)]"
                                    options="{'no_create_edit': True}" />
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="template_id"/>
                                <field name="observation"/>
                            </group>
                        </group>
                    </form>
                </field>

                <button special="cancel" string="Close" class="pull-left oe_highlight oe_read_only" attrs="{'invisible': [('lock', '=', False)]}"/>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_view_tree" model="ir.ui.view">
        <field name="name">Incidences List</field>
        <field name="model">xestionsat.incidence</field>
        <field name="arch" type="xml">
            <tree string="Estados"
                    decoration-danger="state_value == 'Pendente'"
                    decoration-warning="state_value not in ('Pendente','Finalizada', 'Iniciada')"
                    decoration-success="state_value == 'Finalizada'">
                <field name="customer_id"/>
                <field name="title"/>
                <field name="failure_description"/>
                <field name="state"/>
                <field name="state_value"/>
                <field name="assistance_place"/>
                <field name="created_by_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- MENÃšS -->
    <menuitem 
        name="Incidences" 
        id="xestionsat_incidence_sub_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="10" 
        action="xestionsat_incidence_action"/>
</odoo>
