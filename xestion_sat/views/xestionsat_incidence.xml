<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="xestionsat_incidence_view_form" model="ir.ui.view">
        <field name="name">xestionsat.incidence.form</field>
        <field name="model">xestionsat.incidence</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form>
                <!--
                <header>
                    <field name="state" widget="statusbar" 
                        options="{'clickable': '1', 'fold_field': 'fold'}"
                        domain="[('id', '=', state)]"/>
                </header>
                -->
                <group>
                    <group>
                        <field name="lock_view" invisible="True"/>
                        <field name="customer_id" attrs="{'readonly': [('lock_view', '=', True)]}"/>
                        <field name="title"/>
                        <field name="failure_description"/>
                        <field name="observation"/>
                        <field name="created_by_id"
                            domain="[('id', '=', uid)]"
                            options="{'no_create_edit': True}" />
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state"/>
                        <field name="assistance_place"/>
                    </group>
                </group>
                <group>
                    <field name="device_ids"
                        domain="[('owner_id', '=', customer_id)]">
                        <tree>
                            <field name="created_by_id"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="headquarter_id"/>
                            <field name="location"/>
                        </tree>
                    </field>
                </group>

                <label for="incidence_action_ids" string="Actions" />
                <field name="incidence_action_ids">
                    <form>
                        <group>
                            <group>
                                <field name="executed_by"
                                    domain="[('id', '=', uid)]"
                                    options="{'no_create_edit': True}" />
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="template_id"/>
                                <field name="observation"/>
                            </group>
                        </group>
                    </form>
                </field>
                <button special="cancel" string="Close" class="pull-left oe_highlight oe_read_only" attrs="{'invisible': [('lock_view', '=', False)]}"/>
            </form>
        </field>
    </record>
    
    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_view_tree" model="ir.ui.view">
        <field name="name">Incidences List</field>
        <field name="model">xestionsat.incidence</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Incidences"
                    decoration-danger="state_value == 'Pendente'"
                    decoration-warning="state_value not in ('Pendente', 'Finalizada', 'Iniciada', 'Cancelada')"
                    decoration-success="state_value == 'Finalizada'">

                <field name="state"/>
                <field name="state_value"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="customer_id"/>
                <field name="title"/>
                <field name="failure_description"/>
                <field name="assistance_place"/>
                <field name="created_by_id"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <act_window id="xestionsat_incidence_action"
        name="Incidences"
        res_model="xestionsat.incidence"
        view_mode="tree,form"
        limit="80"/>
    <!--
    <record id="xestionsat_incidence_action" model="ir.actions.act_window">
        <field name="name">Incidences</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">xestionsat.incidence</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[6, 0, [xestionsat_incidence_view_tree, xestionsat_incidence_view_form]]"/>
    </record>
    -->

    <!-- MENÃšS -->
    <menuitem 
        name="Incidences" 
        id="xestionsat_incidence_sub_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="10" 
        action="xestionsat_incidence_action"/>
</odoo>
