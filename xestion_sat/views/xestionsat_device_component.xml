<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='xestionsat_device_component_action' model='ir.actions.act_window'>
        <field name="name">Device Components</field>
        <field name="res_model">xestionsat.device.component</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Form View -->
    <record id="xestionsat_device_component_view_tree" model="ir.ui.view">
        <field name="name">Device Components</field>
        <field name="model">xestionsat.device.component</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <group>
                        <field name="device_id" readonly="True"/>
                        <field name="template_id"/>
                        <field name="serial"/>
                        <field name="observation"/>
                    </group>
                    <group>
                        <field name="date_registration"/>
                        <field name="date_cancellation"/>
                    </group>
                </group>
                
                <button special="cancel" string="Close" class="pull-left oe_highlight oe_read_only"/>
            </form>
        </field>
    </record>
</odoo>
