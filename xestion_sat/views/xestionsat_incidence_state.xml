<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTIONS -->
    <act_window id="xestionsat_incidence_state_action"
        name="Incidence States"
        res_model="xestionsat.incidence.state"
        view_type="form"
        view_mode="tree,form"
        context="{'search_default_customer':1}"
        limit="80"/>

    <!-- Form View -->
    <record id="xestionsat_incidence_state_view_form" model="ir.ui.view">
        <field name="name">Incidence State</field>
        <field name="model">xestionsat.incidence.state</field>
        <field name="arch" type="xml">
            <form>
                <group>
                <field name="sequence"/>
                    <field name="state"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_state_view_tree" model="ir.ui.view">
        <field name="name">Incidence States List</field>
        <field name="model">xestionsat.incidence.state</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="state"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- MENÃšS -->
    <menuitem name="States" 
        id="xestionsat_incidence_state_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="30" 
        action="xestionsat_incidence_state_action"/>
</odoo>
