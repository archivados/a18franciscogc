<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACTIONS -->
    <record id='xestionsat_device_action' model='ir.actions.act_window'>
        <field name="name">Devices</field>
        <field name="res_model">xestionsat.device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="xestionsat_device_view_form" model="ir.ui.view">
        <field name="name">Device</field>
        <field name="model">xestionsat.device</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_incidence"  string="Create Inicidence" type="object" class="oe_highlight" />
                    <field name="state" widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="internal_id"/>
                            <field name="created_by_id"
                                domain="[('id', '=', uid)]"/>
                            <field name="date_registration"/>
                            <field name="date_cancellation"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="headquarter_id"
                                options="{'no_create_edit': True}" 
                                domain="['|', ('parent_id', '=', owner_id), ('id', '=', owner_id)]" />
                            <field name="location"/>
                            <field name="user_ids" 
                                domain="['|', ('parent_id', '=', owner_id), ('id', '=', owner_id)]"
                                widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="observation"/>
                    </group>
                    <notebook>
                        <page string="Device Components" name="device_components">
                            <field name="devicecomponents_ids">
                                <form>
                                    <group>
                                        <group>
                                            <field name="template_id"/>
                                            <field name="serial"/>
                                            <field name="observation"/>
                                        </group>
                                        <group>
                                            <field name="date_registration"/>
                                            <field name="date_cancellation"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <button name="create_incidence"  string="Engadir compoÃ±ente" type="action" class="oe_highlight" />
                        </page>
                        <page string="Incidences" name="incidences">
                            <field name="devicecomponents_ids">
                                <tree editable="bottom" colors="green:state==repairing">
                                    <field name="template_id"/>
                                    <field name="serial"/>
                                    <field name="observation"/>
                                    <field name="date_registration"/>
                                    <field name="date_cancellation"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_device_view_tree" model="ir.ui.view">
        <field name="name">Devices List</field>
        <field name="model">xestionsat.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="owner_id"/>
                <field name="name"/>
                <field name="state" />
                <field name="internal_id"/>
                <field name="description"/>
                <field name="date_registration"/>
                <field name="headquarter_id"/>
                <field name="location"/>
                <field name="created_by_id"/>
            </tree>
        </field>
    </record>
</odoo>
