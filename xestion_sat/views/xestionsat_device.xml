<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="xestionsat_device_view_form" model="ir.ui.view">
        <field name="view_type">form</field>
        <field name="name">xestionsat.device.form</field>
        <field name="model">xestionsat.device</field>
        <field name="arch" type="xml">
            <form name="primary_form">
                <header>
                    <button name="create_incidence"  string="Create Inicidence" type="object" class="oe_highlight oe_read_only"/>
                    <field name="state" widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="internal_id"/>
                            <field name="created_by_id"
                                domain="[('id', '=', uid)]"/>
                            <field name="date_registration"/>
                            <field name="date_cancellation"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="headquarter_id"
                                options="{'no_create_edit': True}" 
                                domain="['|', ('parent_id', '=', owner_id), ('id', '=', owner_id)]" />
                            <field name="location"/>
                            <field name="user_ids" 
                                domain="['|', ('parent_id', '=', owner_id), ('id', '=', owner_id)]"
                                widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="observation"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Device Components" name="device_components">
                            <field name="devicecomponent_ids">
                                <tree name="tree_components" editable="bottom">
                                    <field name="template_id"/>
                                    <field name="serial"/>
                                    <field name="observation"/>
                                    <field name="date_registration"/>
                                    <field name="date_cancellation"/>
                                </tree>
                            </field>
                            <button name="add_component"  string="Add component" type="object" class="oe_highlight oe_read_only"/>
                        </page>
                        <page string="Incidences" name="incidences">
                            <field name="incidence_ids" />
                        </page>
                    </notebook>
                    
                    <!-- This button is made visible through Python in the <fields_view_get> method definition -->
                    <button name="btn_close" special="cancel" string="Close" class="pull-left oe_highlight oe_read_only" invisible="True"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree(list) View -->
    <record id="xestionsat_device_view_tree" model="ir.ui.view">
        <field name="view_type">tree</field>
        <field name="name">xestionsat.device.tree</field>
        <field name="model">xestionsat.device</field>
        <field name="arch" type="xml">
            <tree name="primary_tree">
                <field name="owner_id"/>
                <field name="name"/>
                <field name="state" />
                <field name="internal_id"/>
                <field name="description"/>
                <field name="date_registration"/>
                <field name="headquarter_id"/>
                <field name="location"/>
                <field name="created_by_id"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <act_window id="xestionsat_device_action"
        name="Devices"
        res_model="xestionsat.device"
        view_mode="tree,form"
        limit="80"/>
</odoo>
