<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='xestionsat_incidence_assistance_place_action' model='ir.actions.act_window'>
        <field name="name">Incidence Assistance Places</field>
        <field name="res_model">xestionsat.incidence.assistance_place</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="xestionsat_incidence_assistance_place_view_form" model="ir.ui.view">
        <field name="name">Incidence Assistance Place</field>
        <field name="model">xestionsat.incidence.assistance_place</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="assistance_place"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_incidence_assistance_place_view_tree" model="ir.ui.view">
        <field name="name">Incidence Assistance Places List</field>
        <field name="model">xestionsat.incidence.assistance_place</field>
        <field name="arch" type="xml">
            <tree>
                <field name="assistance_place"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- MENÃšS -->
    <menuitem name="Assistance Places" 
        id="xestionsat_incidence_assistance_place_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="30" 
        action="xestionsat_incidence_assistance_place_action"/>
    
</odoo>