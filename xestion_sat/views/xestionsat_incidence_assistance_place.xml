<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form Views -->
    <record id="xestionsat_incidence_assistance_place_view_form" model="ir.ui.view">
        <field name="view_type">form</field>
        <field name="name">xestionsat.incidence.assistance_place.form</field>
        <field name="model">xestionsat.incidence.assistance_place</field>
        <field name="arch" type="xml">
            <form name="primary_form">
                <sheet>
                    <group>
                        <field name="assistance_place"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) Views -->
    <record id="xestionsat_incidence_assistance_place_view_tree" model="ir.ui.view">
        <field name="view_type">form</field>
        <field name="name">xestionsat.incidence.assistance_place.tree</field>
        <field name="model">xestionsat.incidence.assistance_place</field>
        <field name="arch" type="xml">
            <tree name="primary_tree">
                <field name="assistance_place"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <act_window id="xestionsat_incidence_assistance_place_action"
        name="Incidence Assistance Places"
        res_model="xestionsat.incidence.assistance_place"
        view_mode="tree,form"
        limit="80"/>
    
    <!-- MENÃšS -->
    <menuitem name="Assistance Places" 
        id="xestionsat_incidence_assistance_place_menu" 
        parent="xestionsat_incidence_menu" 
        sequence="30" 
        action="xestionsat_incidence_assistance_place_action"/>
</odoo>
