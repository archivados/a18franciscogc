<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--####################################-->
    <!--            Form Views              -->
    <!--####################################-->
    <record id="xestionsat_incidence_stage_view_form" model="ir.ui.view">
        <field name="view_type">form</field>
        <field name="name">xestionsat.incidence.stage.form</field>
        <field name="model">xestionsat.incidence.stage</field>
        <field name="arch" type="xml">
            <form name="primary_form">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="stage"/>
                        <field name="description"/>
                        <field name="highlight"/>
                        <field name="fold"/>
                        <field name="lock_incidence"/>
                        <field name="cancel_incidence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!--####################################-->
    <!--         Tree(list) Views           -->
    <!--####################################-->
    <record id="xestionsat_incidence_stage_view_tree" model="ir.ui.view">
        <field name="view_type">tree</field>
        <field name="name">xestionsat.incidence.stage.tree</field>
        <field name="model">xestionsat.incidence.stage</field>
        <field name="arch" type="xml">
            <tree name="primary_tree" editable="top">
                <field name="sequence"/>
                <field name="stage"/>
                <field name="description"/>
                <field name="highlight"/>
                <field name="fold" class="text-center"/>
                <field name="lock_incidence" class="text-center"/>
                <field name="cancel_incidence" class="text-center"/>
            </tree>
        </field>
    </record>
</odoo>
